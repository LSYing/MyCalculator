<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1e4e9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.edu.bistu.cs.se.mycalculator.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/text"
        android:textSize="25pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="#192f60"
        android:singleLine="true"
        android:maxEms="10"
        android:ellipsize="end"/>


    <TableRow
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="C"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function"
            android:textColor="#bbc8e6"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="del"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function"
            android:textColor="#bbc8e6"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/sin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="sin"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function"
            android:textColor="#bbc8e6"/>
        <Button
            android:id="@+id/cos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="cos"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function"
            android:textColor="#bbc8e6"/>
        <Button
            android:id="@+id/tan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="TAN"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function"
            android:textColor="#bbc8e6"/>
        <Button
            android:id="@+id/square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="^"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function"
            android:textColor="#bbc8e6"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="10pt"
            android:text="7"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="8"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="9"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="รท"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function2"
            android:textColor="#bbc8e6"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="4"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="5"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="6"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/multiply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="ร"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function2"
            android:textColor="#bbc8e6"/>
    </TableRow>
    <TableRow
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="1"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="2"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="3"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/subtract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="-"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function2"
            android:textColor="#bbc8e6"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="."
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="="
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/number"/>
        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="+"
            android:textSize="10pt"
            android:layout_weight="1"
            android:background="@drawable/function2"
            android:textColor="#bbc8e6"/>

    </TableRow>


</TableLayout>
